{
  "name": "everyday/commonquill",
  "type": "library",
  "description": "PHP Markdown to Quill Delta parser based on the CommonMark spec",
  "keywords": [
    "markdown",
    "quill",
    "commonmark",
    "delta"
  ],
  "homepage": "https://github.com/Everyday-AS/common-quill",
  "readme": "README.md",
  "authors": [
    {
      "name": "Everyday AS",
      "email": "system@everyday.no",
      "homepage": "https://everyday.no"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-json": "*",
    "league/commonmark": "^2.2",
    "mikehaertl/php-shellcommand": "^1.4",
    "symfony/finder": "^4.2|^5.0",
    "everyday/php-quill-delta": "^0.1",
    "everyday/html-to-quill": "^0.1"
  },
  "autoload": {
    "psr-4": {
      "Everyday\\CommonQuill\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "bin": [
    "bin/commonquill"
  ],
  "require-dev": {
    "pestphp/pest": "^1.21"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "test": [
      "./vendor/bin/pest"
    ]
  }
}
